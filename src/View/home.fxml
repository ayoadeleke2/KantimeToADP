<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane id="AnchorPane" prefHeight="335.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.HomeController">
   <children>
      <TextField fx:id="filePath" layoutX="40.0" layoutY="233.0" prefHeight="31.0" prefWidth="410.0" />
      <Button layoutX="475.0" layoutY="233.0" mnemonicParsing="false" onAction="#chooseFile" prefHeight="31.0" prefWidth="102.0" text="Search Directory" />
      <TextField fx:id="sickTime" disable="true" layoutX="68.0" layoutY="127.0" prefHeight="31.0" prefWidth="78.0" promptText="Sick TIme" text="1.00">
         <tooltip>
            <Tooltip text="Enter in Sick Time Pay Rate " />
         </tooltip>
      </TextField>
      <HBox layoutY="34.0" prefHeight="83.0" prefWidth="600.0">
         <children>
            <DatePicker fx:id="startDate" promptText="Choose Payroll Start Date">
               <HBox.margin>
                  <Insets left="70.0" right="25.0" top="50.0" />
               </HBox.margin>
            </DatePicker>
            <DatePicker fx:id="endDate" promptText="Choose Payroll End Date">
               <HBox.margin>
                  <Insets right="70.0" top="50.0" />
               </HBox.margin>
            </DatePicker>
         </children>
      </HBox>
      <Button layoutX="510.0" layoutY="283.0" mnemonicParsing="false" onAction="#newWindow" text="Review" />
      <CheckBox fx:id="stCheck" layoutX="174.0" layoutY="132.0" mnemonicParsing="false" onAction="#toggleSickTime" selected="true" text="Toggle Sick Time" />
      <MenuBar layoutX="-1.0" prefHeight="32.0" prefWidth="600.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#changeToEmployeeProfile" text="Edit Employee Sheet" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
